<h1>
  Actor #<%= @the_actor.id %> details
</h1>

<a href="/actors" class="btn btn-block btn-outline-secondary">
  Go back
</a>

<hr>

<dl>
  <dt>
    Name
  </dt>
  <dd>
    <%= @the_actor.name %>
  </dd>

  <dt>
    Dob
  </dt>
  <dd>
    <%= @the_actor.dob %>
  </dd>

  <dt>
    Bio
  </dt>
  <dd>
    <%= @the_actor.bio %>
  </dd>

  <dt>
    Image
  </dt>
  <dd>
    <img src="https://robohash.org/<%= @the_actor.image %>">
  </dd>

  <dt>
    Created at
  </dt>
  <dd>
    <%= time_ago_in_words(@the_actor.created_at) %> ago
  </dd>

  <dt>
    Updated at
  </dt>
  <dd>
    <%= time_ago_in_words(@the_actor.updated_at) %> ago
  </dd>
</dl>

<h2>Filmography</h2>
<table border="1">
<tr>
  <th>
    Title
  </th>

  <th>
    Year
  </th>

  <th>
    Director
  </th>

  <th>
    Character name
  </th>

  <th>
  </th>
</tr>     

<tr>
  <td>
    <% @filmography.each do |a_movie| %>
    <% d = a_movie.movie_id %>
    <% m = Movie.where({ :id => d }).at(0) %>
    <%= m.title %>
    <% end %>
  </td>

  <td>
    y
  </td>

  <td>
    <% @filmography.each do |a_movie| %>
    <% d = a_movie.movie_id %>
    <% m = Movie.where({ :id => d }).at(0) %>
    <% h = m.director_id %>
    <% g = Director.where({ :id => h }).at(0) %>
    <%= g.name %>
    <% end %>
  </td>

  <td>
    <% @filmography.each do |a_film| %>
    <%= a_film.name %>
    <% end %>
  </td>

  <td>
    <a href="/movies">
      Show details
    </a>
  </td>
</tr>
</table>
